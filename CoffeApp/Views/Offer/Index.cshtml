    .coffee-wrapper {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
    }
    .coffee-item {
        border-radius: 10px;
        margin: 10px;
        background-color: #B98753;
        box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
        overflow: hidden;

    }

    background-color: #7E5233;
}
.item-body {
            padding: 10px;
}
.item-image{
  
        width:100%;
        object-fit: cover;
        max-height: 270px;

}

.create-button  {
    float:left;
    color: white;
    text-decoration: none;
    display:flex;
    float: right;
}
</style>

